@model HomeViewModel
<div class="flex-container-column">
    <div>
        <form asp-action="Search" method="get" role="form" class="section">
            <div class="subtitle">
                Search by:
            </div>

            <div class="oneRow">
                <label asp-for="searchByName" class="label">
                    Recipe name:
                </label>
                <input asp-for="searchByName" class="form-control" />
            </div>

            <label class="label">Ingredients:</label>
            <div class="oneRow">
                <label class="label">1.</label>
                <input asp-for="searchByIngredients[0]" class="form-control" placeholder="Ingredient" />
            </div>

            <div class="buttons">
                <input type="submit" class="btn color" value="Search" />
            </div>
        </form>

        <div>
            <div class="section">
                <div class="title">Recipes</div>
                <div id="Recipes">
                    @if (Model.Recipes.Count == 0)
                    {
                        <span>No recipes for display</span>
                    }
                    else
                    {
                        foreach (var recipe in Model.Recipes)
                        {
                            <div class="recipe" id=@recipe.Id>
                                Name: @recipe.Name
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".recipe").on('click', function (e) {
            showRecipe(e.target.id);
        });
    });

    function showRecipe(recipeId) {
        window.location.href = "/Recipe/?recipeId=" + recipeId;
    }
</script>
